extends ../store.pug
include ../_mixins/snipcart.pug
include ../_mixins/intro.pug
include ../_mixins/shopnav.pug

block content
    - var imgUrl = ""
    - var name = info[0].name
    - var title = info[0].title
    - var description = info[0].description
    - var gallery = false
    - var details = true
    
    +intro(imgUrl, title, description, gallery)
        section.items-wrap
            +shopnav(name, details)
            .section
                .container
                    .columns
                        .card.column.is-half.is-offset-one-quarter
                            .card-image
                                figure.image.is-128x128
                                    img(src=product.image.url)
                            .card-content
                                p.title.is-4 #{ product.name }
                                    small  #{ formatMoney(product.price) }
                                p #{ product.description }

                            .card-content
                                +snipcart_button(product)
                                    span.icon.is-large
                                        i.fa.fa-cart-plus                 