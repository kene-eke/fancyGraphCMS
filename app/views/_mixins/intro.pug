mixin intro(header_src, header_title, header_description, gallery_mode)
    header.intro
        - var url = header_src
        - var gallery = gallery_mode
        - var designer = header_title.replace(/\s+/g, '').toLowerCase()
        - var notHome = designer !== "joliepépée"
        - var designerUrl = '/designer/' + designer
        img.intro__image(src=url, alt="Section background image")
        .intro__content
            h1.intro__title #{ header_title }
            .intro__subtitle
                .intro__description #{ header_description }
                if gallery
                    if notHome
                        a(href=designerUrl).bold-text SHOP IN OUR STORE.  
                        span.gallery GALLERY 
                    else
                        span.gallery ABOUT US
                    button.trigger
                        svg(width="100%", height="100%", viewBox="0 0 60 60", preserveAspectRatio="none")
                            g.icon.icon--grid
                                rect(x="32.5", y="5.5", width="22", height="22")
                                rect(x="4.5", y="5.5", width="22", height="22")
                                rect(x="32.5", y="33.5", width="22", height="22")
                                rect(x="4.5", y="33.5", width="22", height="22")
                            g.icon.icon--cross
                                line(x1="4.5", y1="55.5", x2="54.953", y2="5.046")
                                line(x1="54.953", y1="55.5", x2="4.5", y2="5.047")
                        // span Toggle content
                    
    block